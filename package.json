{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "start": "yarn workspace react-impression start",
    "precommit": "lint-staged",
    "format":
      "find . -name '*.js' -o -name '*.md' | grep -v -f .gitignore | xargs prettier-standard"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.2",
    "prettier-standard": "^8.0.1"
  },
  "eslintConfig": {
    "rules": {
      "one-var": 0
    }
  },
  "lint-staged": {
    "*.{js,md}": ["prettier-standard", "git add"]
  }
}
